@{
    ViewBag.Title = "صفحه اصلی";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">

                        <img src="../Library/Image/ragKhab.jpg" alt="Image">
                        <div class="carousel-caption">
                            <h3>رگ خواب</h3>
                            <p>کارگردان : حمید نعمت الله</p>
                        </div>
                    </div>

                    <div class="item">

                        <img src="../Library/Image/oxidan.jpg" Image Maybe" alt="Image">
                        <div class="carousel-caption">
                            <h3>اکسیدان</h3>
                            <p>کارگردان : حامد محمدی</p>
                        </div>
                    </div>
                    <div class="item">

                        <img src="../Library/Image/saat 5.jpg" Image Maybe" alt="Image">
                        <div class="carousel-caption">
                            <h3>ساعت 5 عصر</h3>
                            <p>کارگردان : مهران مدیری</p>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="well">
                <p>
                    <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
                    <span class="sr-only">Loading...</span>&nbsp; آخرین فیلم و سریال
                </p>
            </div>
            <div class="well">
                <p>
                    <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                    <span class="sr-only">Loading...</span>&nbsp; برترین فیلم و سریال
                </p>
            </div>
            <div class="well">
                <p>
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                    <span class="sr-only">Loading...</span>&nbsp; مطالب
                </p>
            </div>
        </div>
    </div>
</div>
<hr />
